{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NMAR Benchmarking Protocol",
  "description": "Schema for evaluating modular AI systems like NMAR",
  "type": "object",
  "properties": {
    "timestamp": { "type": "string", "format": "date-time" },
    "model_id": { "type": "string" },
    "hardware_profile": {
      "type": "object",
      "properties": {
        "cpu": { "type": "string" },
        "ram_gb": { "type": "number" },
        "os": { "type": "string" }
      },
      "required": ["cpu", "ram_gb", "os"]
    },
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "adaptation_speed": { "type": "number", "minimum": 0, "maximum": 1 },
          "fusion_integrity": { "type": "number", "minimum": 0, "maximum": 1 },
          "topology_plasticity": { "type": "number", "minimum": 0, "maximum": 1 },
          "meta_evaluation_accuracy": { "type": "number", "minimum": 0, "maximum": 1 },
          "memory_recall_fidelity": { "type": "number", "minimum": 0, "maximum": 1 },
          "few_shot_generalization": { "type": "number", "minimum": 0, "maximum": 1 },
          "synergy_score": { "type": "number", "minimum": 0, "maximum": 1 },
          "notes": { "type": "string" }
        },
        "required": ["name"]
      }
    }
  },
  "required": ["timestamp", "model_id", "hardware_profile", "modules"]
}
